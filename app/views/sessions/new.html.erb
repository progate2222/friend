<div class="css">
    <div class="center">
        <h1>ともだちつながりアプリ</h1>
        <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
          <br>
          <br>

          <p>アプリにログイン</p>

          <%= f.label :email %>
          <%= f.email_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>
          <br>
          <br>
          <%= f.submit "ログイン" ,class: "button"%>
        <% end %>
    </div>
</div>
